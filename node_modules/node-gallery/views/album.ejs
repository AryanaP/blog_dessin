 <!DOCTYPE html>
<html lang="en">
<head>
    <% include ../../../views/partials/head %>
<!--     <link href="css/styles.css" rel="stylesheet"> -->
</head>
<body class="container">
  <header>
    <% include ../../../views/partials/topbar %>
  </header>

  <main>
    <div class="row">

      <div class="col-sm-4">
        <div class="well">
           <% include ../../../views/partials/sidebar %>
        </div>
      </div>

      <div class="col-sm-8">
        <div class="jumbotron">
          <h1>This is great</h1>
          <p>Welcome to templating using EJS</p>
        </div>

        <link href="/<%= urlRoot %>/gallery.css" rel="stylesheet" type="text/css">
          <% if (!isRoot){ %>
            <nav class="breadcrumb">

            <% for (var i=0; i<breadcrumb.length; i++) { %>
            <% if (i==breadcrumb.length-1){ %>
            <%= breadcrumb[i].name %>
            <% }else{ %>
            <a href="/<%= breadcrumb[i].url %>"> <%= breadcrumb[i].name %> &raquo; </a>
            <% } %>
            <% } %>

            </nav>
          <% } %>

          <h1 class="album-title"><%= name %></h1>

          <% if (albums.length>0){ %>
            <h2>Albums</h2>
            <ul class="albums">
              <% albums.forEach(function(album){ %>
                <li class="thumb">
                  <a href="/<%= album.url %>">
                    <figure>
                      <img src="/<%= album.url %>?tn=1" alt="<%= album.name %>"/>
                      <figcaption><%= album.name %></figcaption>
                    </figure>
                  </a>
                </li>
              <% }) %>
            </ul>
          <% } %>

          <% if (photos.length>0){ %>
            <h2>Photos</h2>
            <ul class="photos">
              <% photos.forEach(function(photo){ %>
                <li class="thumb">
                  <a href="/<%= photo.url %>">
                    <figure>
                      <img src="/<%= photo.src %>?tn=1" alt="<%= photo.name %>"/>
                      <figcaption><%= photo.name %></figcaption>
                    </figure>
                  </a>
                </li>
              <% }) %>
            </ul>
          <% } %>

      </div>

    </div>



  </main>

  <footer>
      <% include ../../../views/partials/footer %>
  </footer>

</body>
</html>



